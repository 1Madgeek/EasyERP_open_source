{
  "extends": "thinkmobiles",
  "globals": {
    "App": true,
    "sinon": true
  },
  "rules": {
    "no-trailing-spaces": [
      "error",
      {
        "skipBlankLines": true
      }
    ],
    "key-spacing": [
      "error",
      {
        "align": "colon"
      }
    ],
    "no-shadow": [
      2,
      {
        "hoist": "never"
      }
    ],
    "no-param-reassign": [
      "error",
      {
        "props": false
      }
    ],
    "default-case": ["error", { "commentPattern": "^skip\\sdefault" }]
  }
}
